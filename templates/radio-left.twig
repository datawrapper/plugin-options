{% if option.type == 'radio-left' %}

    <label class="separator" for="{{ key }}">{{ option.label|raw }}</label>
    <div class="form-inline">
        {% for opt in option.options %}
            <label class="radio" style="padding-right:1em">
                <input type="radio" name="{{ key }}" value="{{ opt.value }}" {% if opt.value == option.default %}checked="checked" {% endif %}/>&nbsp;{{ opt.label }}
            </label>
        {% endfor %}
    </div>

{% endif %}
