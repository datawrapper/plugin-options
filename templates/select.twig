{% if option.type == 'select' %}

    <label class="control-label" for="{{ key }}">{{ option.label|raw }}</label>
    <div class="controls">
        <select id="{{ key }}" style="width:{% if option.width %}{{ option.width }}{% else %}auto{% endif %}">
            {% for opt in option.options %}
            <option value="{{ opt.value }}" {% if option.default == opt.value %}selected="selected" {% endif %}>{{ opt.label }}</option>
            {% endfor %}
        </select>
    </div>

{% endif %}
